<h1>New Assignment</h1>

<%= form_with model: @assignment, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :subject %><br>
    <%= form.select :subject, ['Math', 'Art', 'History', 'Reading Comprehension', 'Physics'] %>
  </div>

  <div>
    <%= form.label :grade_level %><br>
    <%= form.number_field :grade_level, in: 0..12 %>
  </div>

  <div>
    <%= form.label :difficulty %><br>
    <%= form.select :difficulty, ['Easy', 'Medium', 'Hard'] %>
  </div>

  <div>
    <%= form.label :number_of_questions %><br>
    <%= form.number_field :number_of_questions, in: 1..100 %>
  </div>

  <div>
    <%= form.label :interests %><br>
    <%= form.text_area :interests, placeholder: 'e.g., Fortnite, NBA' %>
  </div>

  <div>
    <%= form.submit 'Create Assignment' %>
  </div>
<% end %>

<%= link_to 'Back', assignments_path %>