<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">New Assignment</h1>
    
    <% if Rails.env.development? %>
      <button onclick="fillRandomValues()" type="button" class="mt-2 text-sm text-gray-500 hover:text-gray-700">
        ðŸŽ² Fill with Random Values
      </button>
      
      <script>
        function fillRandomValues() {
          const funnyTitles = ["Zombie Math Attack", "History of Pizza", "Physics of Superheros", "Art of Memes", "Reading Pokemon Cards"];
          const funnyInterests = ["dancing penguins", "pizza-loving robots", "skateboarding grandmas", "ninja cats", "musical vegetables"];
          
          document.getElementById("assignment_title").value = funnyTitles[Math.floor(Math.random() * funnyTitles.length)];
          document.getElementById("assignment_subject").value = ["Math", "Art", "History", "Reading Comprehension", "Physics"][Math.floor(Math.random() * 5)];
          document.getElementById("assignment_grade_level").value = Math.floor(Math.random() * 12);
          document.getElementById("assignment_difficulty").value = ["Easy", "Medium", "Hard"][Math.floor(Math.random() * 3)];
          document.getElementById("assignment_number_of_questions").value = Math.floor(Math.random() * 6) + 1;
          document.getElementById("assignment_interests").value = funnyInterests[Math.floor(Math.random() * funnyInterests.length)];
        }
      </script>
    <% end %>
  </div>

  <%= render 'form', assignment: @assignment %>
</div>