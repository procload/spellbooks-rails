<%= form_with model: @assignment, local: true, class: "space-y-6" do |f| %>
  <% if @assignment.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <h2 class="font-bold mb-2">
        <%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.label :subject, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :subject, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.label :grade_level, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :grade_level, in: 0..12, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.label :difficulty, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :difficulty, ['Easy', 'Medium', 'Hard'], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.label :number_of_questions, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :number_of_questions, in: 1..100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.label :interests, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :interests, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", assignments_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
  </div>
<% end %> 