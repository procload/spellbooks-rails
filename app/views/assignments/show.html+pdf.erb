<%# Set the title for the PDF layout %>
<% content_for :title do %>
  <%= @assignment.title %>
<% end %>

<div class="assignment-metadata">
  <p><span class="label">Subject:</span> <%= @assignment.subject %></p>
  <p><span class="label">Grade Level:</span> <%= @assignment.grade_level %></p>
  <p><span class="label">Difficulty:</span> <%= @assignment.difficulty %></p>
</div>

<% if @assignment.image.attached? %>
  <div class="assignment-image">
    <%= wicked_pdf_image_tag url_for(@assignment.image), style: 'max-width: 100%; margin: 20px 0;' %>
  </div>
<% end %>

<div class="questions">
  <% @assignment.questions.each_with_index do |question, index| %>
    <div class="question">
      <div class="question-content">
        <strong>Question <%= index + 1 %>:</strong>
        <%= question.content %>
      </div>
      
      <ul class="answers">
        <% question.answers.shuffle.each_with_index do |answer, letter_index| %>
          <li data-letter="<%= ('A'..'Z').to_a[letter_index] %>">
            <%= answer.text %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<% if Current.user&.teacher? %>
  <div class="page-break"></div>
  
  <div class="answer-key">
    <h2 class="assignment-title">Answer Key</h2>
    
    <% @assignment.questions.each_with_index do |question, index| %>
      <div class="question">
        <div class="question-content">
          <strong>Question <%= index + 1 %></strong>
        </div>
        
        <div class="correct-answer">
          Correct Answer: <%= question.answers.find_by(is_correct: true)&.text %>
        </div>
        
        <div class="explanation">
          <strong>Explanation:</strong><br>
          <%= question.explanation %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
