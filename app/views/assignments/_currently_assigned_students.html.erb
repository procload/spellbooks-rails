<!-- Assigned Students List -->
<div class="space-y-4">
  <div class="flex items-center justify-between">
    <h3 class="text-sm font-medium text-gray-700">Assignment Progress</h3>
    <span class="text-sm text-gray-500">
      <%= pluralize(@assignment.students.count, 'student') %> assigned
    </span>
  </div>

  <% if @assignment.students.any? %>
    <div class="space-y-2">
      <div class="grid grid-cols-3 gap-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-sm text-gray-500">Not Started</p>
          <p class="text-lg font-medium text-gray-900"><%= @assignment.students.select { |s| @assignment.student_progress(s)&.dig(:status) == 'not_started' }.count %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-sm text-gray-500">In Progress</p>
          <p class="text-lg font-medium text-gray-900"><%= @assignment.students.select { |s| @assignment.student_progress(s)&.dig(:status) == 'in_progress' }.count %></p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-sm text-gray-500">Completed</p>
          <p class="text-lg font-medium text-gray-900"><%= @assignment.students.select { |s| @assignment.student_progress(s)&.dig(:status) == 'completed' }.count %></p>
        </div>
      </div>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No students assigned yet.</p>
  <% end %>
</div>
