<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <%= link_to assignment_path(assignment) do %>
    <%= render "assignments/card_image", assignment: assignment %>
    
    <div class="p-4">
      <div class="flex justify-between items-start">
        <div>
          <h3 class="font-medium text-gray-900"><%= assignment.title %></h3>
          <div class="text-sm text-gray-500 mt-1">
            <%= assignment.subject %> • Grade <%= assignment.grade_level %> • 
            <%= pluralize(assignment.questions.count, 'question') %>
            <%= render "assignments/status_badge", assignment: assignment %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 