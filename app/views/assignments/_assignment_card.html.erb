<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <% if assignment.image.attached? %>
    <div class="aspect-w-16 aspect-h-9">
      <%= image_tag assignment.display_image, 
          class: "w-full h-full object-cover",
          alt: assignment.title %>
    </div>
  <% end %>
  
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= assignment.title %></h3>
    
    <div class="flex items-center text-sm text-gray-600 mb-2">
      <span class="mr-2"><%= assignment.subject %></span>
      <span class="mx-2">•</span>
      <span class="mr-2">Grade <%= assignment.grade_level %></span>
      <span class="mx-2">•</span>
      <span><%= assignment.difficulty %></span>
    </div>

    <div class="flex items-center text-sm text-gray-500 mb-4">
      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span><%= assignment.created_at.strftime("%B %d, %Y") %></span>
    </div>

    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-600">
        <%= pluralize(assignment.number_of_questions, 'question') %>
      </span>
      
      <%= link_to assignment_path(assignment), 
          class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary" do %>
        View Details
        <svg class="ml-2 -mr-0.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
  </div>
</div> 