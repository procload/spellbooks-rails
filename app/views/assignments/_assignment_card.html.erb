<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <% if assignment.image.attached? %>
    <div class="aspect-w-16 aspect-h-9">
      <% if variant = assignment.cached_image_variant %>
        <%= image_tag variant, 
            class: "w-full h-full object-cover",
            alt: assignment.title %>
      <% else %>
        <%= image_tag assignment.image, 
            class: "w-full h-full object-cover",
            alt: assignment.title %>
      <% end %>
    </div>
  <% else %>
    <div class="aspect-w-16 aspect-h-9 bg-gray-100 flex items-center justify-center">
      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
  <% end %>

  <div class="p-4">
    <div class="flex items-center justify-between mb-2">
      <h3 class="text-lg font-semibold text-gray-900 truncate">
        <%= link_to assignment.title, assignment_path(assignment), class: "hover:text-primary" %>
      </h3>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= assignment.difficulty == 'Easy' ? 'bg-green-100 text-green-800' : 
                                                                                               assignment.difficulty == 'Medium' ? 'bg-yellow-100 text-yellow-800' : 
                                                                                               'bg-red-100 text-red-800' %>">
        <%= assignment.difficulty %>
      </span>
    </div>

    <div class="text-sm text-gray-600 mb-3">
      <div class="flex items-center space-x-4">
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Grade <%= assignment.grade_level %>
        </span>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <%= assignment.number_of_questions %> Questions
        </span>
      </div>
    </div>

    <div class="text-sm text-gray-500 line-clamp-2 mb-4">
      <%= assignment.interests %>
    </div>

    <div class="flex items-center justify-between text-sm">
      <span class="text-gray-600">
        <%= assignment.subject %>
      </span>
      <% if authenticated? && Current.user.teacher? %>
        <span class="text-gray-600">
          <%= pluralize(assignment.students.count, 'student') %>
        </span>
      <% end %>
    </div>

    <% if authenticated? && Current.user.student? %>
      <div class="mt-4 flex justify-end space-x-2"
           data-controller="assignment-status">
        <% %w[pending in_progress completed].each do |status| %>
          <button data-action="click->assignment-status#update"
                  data-assignment-status-url-value="<%= update_status_assignment_path(assignment) %>"
                  data-assignment-status-value="<%= status %>"
                  class="px-3 py-1 rounded text-sm font-medium
                         <%= assignment.status == status ? 'bg-primary text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
            <%= status.titleize %>
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 