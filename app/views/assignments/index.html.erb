<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Assignments</h1>
    <% if Current.user.teacher? %>
      <%= link_to 'New assignment', 
          new_assignment_path,
          class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="assignments" class="min-w-full mt-8">
    <%= render @assignments %>
  </div>
</div>