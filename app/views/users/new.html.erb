<div class="max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-bold mb-6">Sign Up</h2>

  <%= form_with model: @user, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md mb-6">
        <ul class="list-disc list-inside text-red-700">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <%= text_input :first_name,
            form: form,
            label: "First name",
            required: true %>
      </div>

      <div class="sm:col-span-3">
        <%= text_input :last_name,
            form: form,
            label: "Last name",
            required: true %>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm" %>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :role, User::ROLES, { prompt: "Select a role" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm" %>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm" %>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= primary_button "Sign Up", type: "submit", class: "w-full" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign in", new_session_path, class: "font-medium text-primary hover:text-primary/90" %>
    </p>
  </div>
</div> 