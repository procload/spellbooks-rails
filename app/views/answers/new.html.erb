<%= turbo_frame_tag "new_answer_#{@question.id}" do %>
  <%= form_with model: [@assignment, @question, @answer], class: "space-y-4" do |f| %>
    <div class="flex items-center gap-4 p-3 border rounded-lg bg-gray-50">
      <div class="flex-grow">
        <%= f.text_field :text, 
            class: "w-full rounded-md border-gray-300",
            placeholder: "Enter new answer" %>
      </div>
      
      <div class="flex items-center gap-2">
        <%= f.check_box :is_correct, 
            class: "h-4 w-4 text-blue-600 rounded border-gray-300",
            onchange: "ensureSingleCorrect(this)" %>
        <%= f.label :is_correct, "Correct Answer", 
            class: "text-sm text-gray-600" %>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Add", 
            class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
        <%= link_to "Cancel", 
            assignment_path(@assignment),
            class: "px-3 py-1 border border-gray-300 rounded hover:bg-gray-50" %>
      </div>
    </div>
  <% end %>
<% end> 