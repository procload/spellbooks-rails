<%= turbo_frame_tag "new_answer_#{@question.id}" do %>
  <%= form_with model: [@assignment, @question, @answer], class: "space-y-4" do |f| %>
    <div class="flex items-center gap-4 p-3 border rounded-lg bg-gray-50">
      <div class="flex-grow">
        <div>
          <%= text_input :text,
              form: f,
              label: "Answer Text",
              required: true,
              placeholder: "Enter the answer text" %>
        </div>
      </div>
      
      <div class="flex items-center gap-2">
        <%= f.check_box :is_correct, 
            class: "h-4 w-4 text-blue-600 rounded border-gray-300",
            onchange: "ensureSingleCorrect(this)" %>
        <%= f.label :is_correct, "Correct Answer", 
            class: "text-sm text-gray-600" %>
      </div>

      <div class="flex gap-2">
        <%= primary_button "Add", 
            type: "submit",
            size: :small %>
        <%= transparent_button "Cancel", 
            href: assignment_path(@assignment),
            size: :small %>
      </div>
    </div>
  <% end %>
<% end> 