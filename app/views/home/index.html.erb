<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to Spellbooks</h1>
    <p class="text-xl text-gray-600">Create and manage educational assignments with AI-powered assistance</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Recent Assignments</h2>
      <% if @assignments.any? %>
        <div class="space-y-4">
          <% @assignments.first(3).each do |assignment| %>
            <%= render assignment %>
          <% end %>
        </div>
        <div class="mt-4">
          <%= link_to 'View All Assignments', assignments_path, 
              class: 'link-secondaryfont-medium' %>
        </div>
      <% else %>
        <p class="text-gray-600">No assignments yet.</p>
      <% end %>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Quick Actions</h2>
      <div class="space-y-4">
        <%= link_to new_assignment_path, class: 'btn btn-primary w-full' do %>
          Create New Assignment
        <% end %>
        <%= link_to assignments_path, class: 'btn btn-secondary w-full' do %>
          Manage Assignments
        <% end %>
      </div>
    </div>
  </div>
</div>