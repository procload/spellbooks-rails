<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to Spellbooks</h1>
    <p class="text-xl text-gray-600">Create and manage educational assignments with AI-powered assistance</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Recent Assignments</h2>
      <% if @assignments.any? %>
        <div class="space-y-4">
          <% @assignments.first(3).each do |assignment| %>
            <div class="border-b pb-4">
              <div class="flex justify-between items-center">
                <span class="font-medium text-gray-900"><%= assignment.title %></span>
                <%= link_to 'View', assignment_path(assignment), class: 'text-indigo-600 hover:text-indigo-900' %>
              </div>
              <div class="text-sm text-gray-500">
                <%= assignment.subject %> • Grade <%= assignment.grade_level %> • <%= assignment.questions.count %>/<%= assignment.number_of_questions %> questions
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <%= link_to 'View All Assignments', assignments_path, 
              class: 'text-indigo-600 hover:text-indigo-900 font-medium' %>
        </div>
      <% else %>
        <p class="text-gray-600">No assignments yet.</p>
      <% end %>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Quick Actions</h2>
      <div class="space-y-4">
        <%= link_to new_assignment_path, 
            class: 'block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' do %>
          Create New Assignment
        <% end %>
        <%= link_to assignments_path,
            class: 'block w-full text-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' do %>
          Manage Assignments
        <% end %>
        <button onclick="document.querySelector('[data-controller=toast]').style.display = 'block'" 
                class="w-full text-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Show Toast Notification
        </button>
      </div>
    </div>
  </div>

  <%= render partial: "shared/toast", locals: { message: "This is a test message!", type: "success" } %>
</div>