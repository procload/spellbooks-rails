<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <h1 class="text-4xl font-medium mb-8">Homework Dashboard</h1>

    <div class="flex justify-between items-center mb-8">
      <!-- Subject Tabs -->
      <div class="space-x-2">
        <%= link_to "All", root_path(subject: nil), 
            class: "px-4 py-2 #{params[:subject].nil? ? 'bg-spellbooks-element' : 'bg-spellbooks-sidebar'} rounded-full hover:bg-spellbooks-element-hover transition-colors" %>
        <% Assignment.distinct.pluck(:subject).compact.each do |subject| %>
          <%= link_to subject, root_path(subject: subject), 
              class: "px-4 py-2 #{params[:subject] == subject ? 'bg-spellbooks-element' : 'bg-spellbooks-sidebar'} rounded-full hover:bg-spellbooks-element-hover transition-colors" %>
        <% end %>
      </div>

      <!-- Create Assignment Button for Teachers -->
      <% if Current.user&.teacher? %>
        <%= link_to new_assignment_path, class: "px-6 py-3 bg-spellbooks-element text-spellbooks-text rounded-lg hover:bg-spellbooks-element-hover transition-colors" do %>
          Create New Assignment
        <% end %>
      <% end %>
    </div>

    <h2 class="text-lg font-medium mb-4">Upcoming Assignments</h2>

    <!-- Assignment Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <%= render partial: "assignments/assignment_card", collection: @assignments, as: :assignment %>
    </div>
  </div>
</div>