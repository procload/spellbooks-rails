<aside class="w-20 bg-spellbooks-sidebar p-4 flex flex-col items-center space-y-6 rounded-r-3xl">
  <%= link_to root_path, class: "text-2xl font-bold bg-spellbooks-element p-3 rounded-2xl" do %>
    📚
  <% end %>
  
  <nav class="space-y-6">
    <%= link_to root_path, class: "block p-3 bg-spellbooks-element rounded-2xl hover:bg-spellbooks-element-hover transition-colors" do %>
      🏠
    <% end %>
    <%= link_to '#', class: "block p-3 bg-spellbooks-element rounded-2xl hover:bg-spellbooks-element-hover transition-colors" do %>
      📅
    <% end %>
    <%= link_to '#', class: "block p-3 bg-spellbooks-element rounded-2xl hover:bg-spellbooks-element-hover transition-colors" do %>
      📘
    <% end %>
    <%= link_to '#', class: "block p-3 bg-spellbooks-element rounded-2xl hover:bg-spellbooks-element-hover transition-colors" do %>
      📊
    <% end %>
  </nav>

  <div class="mt-auto relative" data-controller="sidebar">
    <button class="block p-3 bg-spellbooks-element rounded-2xl hover:bg-spellbooks-element-hover transition-colors"
            data-action="sidebar#toggle">
      ⚙️
    </button>

    <div data-sidebar-target="menu"
         class="hidden absolute left-full ml-2 bottom-0 w-48 rounded-lg shadow-lg bg-white ring-1 ring-black ring-opacity-5 py-1">
      <div class="px-4 py-2 text-sm text-gray-500 border-b border-gray-100">
        Signed in as<br>
        <span class="font-medium text-gray-900"><%= Current.user.first_name %> <%= Current.user.last_name %></span>
      </div>

      <%= link_to edit_user_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Edit Profile
        </div>
      <% end %>

      <%= button_to logout_session_path, method: :delete, class: "w-full text-left block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Sign Out
        </div>
      <% end %>
    </div>
  </div>
</aside>
