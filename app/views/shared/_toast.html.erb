<% 
  # Add more detailed debug logging
  Rails.logger.info "[Toast Partial] Rendering toast with type: #{type}, message: #{message}"
  Rails.logger.info "[Toast Partial] Current user: #{Current.user&.id}"
  Rails.logger.info "[Toast Partial] Link path: #{defined?(link_path) ? link_path : 'none'}"
%>
<div data-controller="toast" 
     class="fixed bottom-4 right-4 z-50 <%= 'auto-hide' if local_assigns[:auto_hide] %>"
     data-toast-debug="<%= message %>">
  <div data-toast-target="notification" 
       class="hidden opacity-0 transform translate-y-2 transition-all duration-500 ease-in-out rounded-lg shadow-lg p-4 w-96
              <%= case type&.to_s
                  when 'success'
                    'bg-green-100 border-l-4 border-green-500 text-green-700'
                  when 'error'
                    'bg-red-100 border-l-4 border-red-500 text-red-700'
                  else
                    'bg-blue-100 border-l-4 border-blue-500 text-blue-700'
                  end %>">
    <div class="flex items-start space-x-4">
      <div class="flex-shrink-0 pt-0.5">
        <%= render partial: "shared/toast_icon", locals: { type: type } %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium">
          <%= message %>
        </p>
        <% if defined?(link_path) && defined?(link_text) %>
          <%= link_to link_text, link_path, class: "mt-1 text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
        <% end %>
      </div>
      <div class="flex-shrink-0 self-start">
        <button data-action="click->toast#hide" class="rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <span class="sr-only">Close</span>
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div> 