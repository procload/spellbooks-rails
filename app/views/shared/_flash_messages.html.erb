<% if flash.any? %>
  <div class="fixed top-4 right-4 z-50">
    <% flash.each do |type, message| %>
      <div class="<%= type == 'notice' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %> px-4 py-3 rounded-lg shadow-md mb-3 flex items-center">
        <p class="flex-1"><%= message %></p>
        <button class="ml-4 text-current hover:text-gray-700" onclick="this.parentElement.remove()">
          <span class="sr-only">Close</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
